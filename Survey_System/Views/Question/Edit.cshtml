@model Survey_System.Models.Question
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title gradient-winter">Soru Düzenleme Sayfası</div>
        <hr>
        <form action="/Question/Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="input-1">Soruyu Giriniz</label>
                <input type="text" class="form-control" name="QuestionLine" id="input-1" placeholder="Soruyu giriniz" maxlength="250" required value="@Model.QuestionLine">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-round btn-gradient-meridian shadow-youtube px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>

